# Copy to .env and fill in values
FLASK_SECRET_KEY=change_this_secret_key
# Create the first admin user on boot:
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=ChangeMe123!

TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_auth_token
# Prefer Messaging Service for 10DLC
TWILIO_MESSAGING_SERVICE_SID=MGxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# If not using MSG service, fall back to a default from number:
TWILIO_FROM_NUMBER=+15551230001

# Rate limiting default (messages per minute)
RATE_LIMIT_PER_MINUTE=30

# Public webhook URL (for Twilio inbound)
PUBLIC_WEBHOOK_URL=

# GoHighLevel: where to send positive responses (webhook or API endpoint)
GHL_POSITIVE_WEBHOOK_URL=https://hooks.your-ghl.com/endpoint
# Optional header for auth if needed (JSON, e.g. {"Authorization": "Bearer xyz"})
GHL_HEADERS_JSON=
